<Page
    x:Class="elementary.ElementListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:elementary"
    xmlns:vm="using:elementary.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Grid
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Uid="Input/Filter"
                Margin="2"
                TextChanged="OnFilterChanged" />
            <Button
                x:Uid="Button/Sort"
                Grid.Column="1"
                Margin="2">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            x:Uid="Title/Sort"
                            IsEnabled="False" />
                        <ToggleMenuFlyoutItem
                            x:Name="sortNumber"
                            x:Uid="Sort/Number"
                            IsChecked="True"
                            Click="OnSortButtonClick" />
                        <ToggleMenuFlyoutItem
                            x:Name="sortName"
                            x:Uid="Sort/Name"
                            Click="OnSortButtonClick" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <ListView
            x:Name="list"
            Grid.Row="1"
            ItemsSource="{x:Bind ListItems, Mode=OneWay}"
            SelectionChanged="OnItemSelected">
            <ListView.ItemContainerStyle>
                <Style
                    TargetType="ListViewItem">
                    <Setter
                        Property="BorderBrush"
                        Value="LightGray" />
                    <Setter
                        Property="BorderThickness"
                        Value="0,0,0,1" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate
                    x:DataType="vm:ElementListItem">
                    <StackPanel
                        Orientation="Horizontal"
                        Padding="0,2">
                        <Grid
                            Width="80"
                            Padding="4,2"
                            Background="{x:Bind Color, Mode=OneWay}">
                            <TextBlock
                                FontSize="16"
                                Text="{x:Bind Number}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="36"
                                FontWeight="SemiBold"
                                Text="{x:Bind Symbol}"
                                Margin="0,8,0,0" />
                        </Grid>
                        <TextBlock
                            Margin="8,0"
                            FontSize="36"
                            Text="{x:Bind Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Frame
            x:Name="detailsFrame"
            Grid.Column="1"
            Grid.RowSpan="2" />
    </Grid>
</Page>
