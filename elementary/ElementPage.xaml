<Page
    x:Class="elementary.ElementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:elementary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style
            x:Key="EvenRow"
            TargetType="Border">
            <Setter
                Property="Background"
                Value="#44888888" />

            <Setter
                Property="Grid.ColumnSpan"
                Value="3" />
        </Style>

        <Style
            x:Key="OddRow"
            TargetType="Border">
            <Setter
                Property="Grid.ColumnSpan"
                Value="3" />
        </Style>

        <Style
            x:Key="Label"
            TargetType="TextBlock">
            <Setter
                Property="Margin"
                Value="4" />

            <Setter
                Property="FontWeight"
                Value="SemiBold" />
        </Style>

        <Style
            x:Key="Value"
            TargetType="TextBlock">
            <Setter
                Property="Margin"
                Value="4" />

            <Setter
                Property="Grid.Column"
                Value="1" />
        </Style>
    </Page.Resources>

    <ScrollViewer
        HorizontalScrollBarVisibility="Auto">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                            MinWindowWidth="720" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter
                            Target="pageTitle.(Grid.Row)"
                            Value="0" />

                        <Setter
                            Target="pageTitle.(Grid.Column)"
                            Value="1" />

                        <Setter
                            Target="pageTitle.(Grid.ColumnSpan)"
                            Value="1" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid
            Padding="6">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>

            <Grid
                Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid
                    MinWidth="80"
                    MinHeight="80"
                    Padding="4,0,4,4"
                    Background="{x:Bind Element.Color, Mode=OneWay}">
                    <TextBlock
                        FontSize="20"
                        Text="{x:Bind Element.Number}"
                        Foreground="Black" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="42"
                        FontWeight="SemiBold"
                        Text="{x:Bind Element.Symbol}"
                        Margin="4,0"
                        Foreground="Black" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="16"
                        Text="{x:Bind Element.Weight}"
                        Foreground="Black" />
                </Grid>

                <TextBlock
                    x:Name="pageTitle"
                    Style="{ThemeResource HeaderTextBlockStyle}"
                    Grid.Row="1"
                    Grid.ColumnSpan="4"
                    Margin="12,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{x:Bind Element.Name}"
                    TextWrapping="NoWrap"
                    TextTrimming="CharacterEllipsis" />

                <Button
                    x:Uid="Button/Wiki"
                    Tag="{x:Bind Element.Wiki}"
                    Grid.Column="2"
                    Width="80"
                    Height="80"
                    Margin="4"
                    Click="OnButtonClick">
                    <Image
                        Source="Assets/ButtonWiki.png" />
                </Button>

                <Button
                    x:Uid="Button/Video"
                    Tag="{x:Bind Element.Video}"
                    Grid.Column="3"
                    Width="80"
                    Height="80"
                    Margin="4"
                    Click="OnButtonClick">
                    <Image
                        Source="Assets/ButtonVideo.png" />
                </Button>
            </Grid>

            <Grid
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Row="0"
                    Style="{StaticResource OddRow}" />

                <TextBlock
                    x:Uid="Label/Number"
                    Grid.Row="0"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Number}" />

                <Border
                    Grid.Row="1"
                    Style="{StaticResource EvenRow}" />

                <TextBlock
                    x:Uid="Label/Symbol"
                    Grid.Row="1"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Symbol}" />

                <Border
                    Grid.Row="2"
                    Style="{StaticResource OddRow}" />

                <TextBlock
                    x:Uid="Label/Name"
                    Grid.Row="2"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="2"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Name}" />

                <Border
                    Grid.Row="3"
                    Style="{StaticResource EvenRow}" />

                <TextBlock
                    x:Uid="Label/Weight"
                    Grid.Row="3"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="3"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Weight}" />

                <Border
                    Grid.Row="4"
                    Style="{StaticResource OddRow}" />

                <TextBlock
                    x:Uid="Label/Category"
                    Grid.Row="4"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="4"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Category}" />

                <Border
                    Grid.Row="5"
                    Style="{StaticResource EvenRow}" />

                <TextBlock
                    x:Uid="Label/GPB"
                    Grid.Row="5"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="5"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.GPB}" />

                <Border
                    Grid.Row="6"
                    Style="{StaticResource OddRow}" />

                <TextBlock
                    x:Uid="Label/Configuration"
                    Grid.Row="6"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="6"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Configuration}" />

                <Border
                    Grid.Row="7"
                    Style="{StaticResource EvenRow}" />

                <TextBlock
                    x:Uid="Label/Electrons"
                    Grid.Row="7"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="7"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Electrons}" />

                <Border
                    Grid.Row="8"
                    Style="{StaticResource OddRow}" />

                <TextBlock
                    x:Uid="Label/Density"
                    Grid.Row="8"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="8"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Density}" />

                <Border
                    Grid.Row="9"
                    Style="{StaticResource EvenRow}" />

                <TextBlock
                    x:Uid="Label/Melt"
                    Grid.Row="9"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="9"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Melt, Mode=OneWay}" />

                <Border
                    Grid.Row="10"
                    Style="{StaticResource OddRow}" />

                <TextBlock
                    x:Uid="Label/Boil"
                    Grid.Row="10"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="10"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Boil, Mode=OneWay}" />

                <Border
                    Grid.Row="11"
                    Style="{StaticResource EvenRow}" />

                <TextBlock
                    x:Uid="Label/Heat"
                    Grid.Row="11"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="11"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Heat}" />

                <Border
                    Grid.Row="12"
                    Style="{StaticResource OddRow}" />

                <TextBlock
                    x:Uid="Label/Negativity"
                    Grid.Row="12"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="12"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Negativity}" />

                <Border
                    Grid.Row="13"
                    Style="{StaticResource EvenRow}" />

                <TextBlock
                    x:Uid="Label/Abundance"
                    Grid.Row="13"
                    Style="{StaticResource Label}" />

                <TextBlock
                    Grid.Row="13"
                    Style="{StaticResource Value}"
                    Text="{x:Bind Element.Abundance}" />
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
